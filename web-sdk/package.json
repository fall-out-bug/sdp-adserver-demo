{
  "name": "@adserver/web-sdk",
  "version": "0.1.0",
  "description": "Lightweight JavaScript SDK for ad delivery",
  "type": "module",
  "main": "dist/adserver.umd.cjs",
  "module": "dist/adserver.umd.js",
  "types": "dist/sdk.d.ts",
  "unpkg": "dist/adserver.iife.js",
  "jsdelivr": "dist/adserver.iife.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:full": "tsc && vite build --mode full",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "size": "gzip-size dist/adserver.iife.js",
    "size:check": "node -e \"const fs=require('fs');const gz=require('gzip-size');const s=fs.readFileSync('dist/adserver.iife.js');const z=gz.sync(s);console.log('gzip:', (z/1024).toFixed(2)+'kB');process.exit(z>5000?1:0);\""
  },
  "keywords": [
    "adserver",
    "sdk",
    "ads"
  ],
  "author": "AdServer",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "gzip-size": "^6.0.0",
    "jsdom": "^28.0.0",
    "terser": "^5.46.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
