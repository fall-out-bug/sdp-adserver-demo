{
  "name": "@adserver/web-sdk",
  "version": "0.1.0",
  "description": "Lightweight JavaScript SDK for ad delivery",
  "type": "module",
  "main": "dist/sdk.js",
  "types": "dist/sdk.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "size": "gzip-size dist/sdk.min.js"
  },
  "keywords": [
    "adserver",
    "sdk",
    "ads"
  ],
  "author": "AdServer",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "gzip-size": "^6.0.0",
    "jsdom": "^28.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
