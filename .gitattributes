# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files
*.md text eol=lf
*.py text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.json text eol=lf

# Declare files that should always be checked out binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary

# Use bd merge for beads JSONL files
.beads/issues.jsonl merge=beads
